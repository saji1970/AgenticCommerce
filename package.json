{
  "name": "agentic-commerce",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter @agentic-commerce/backend dev\" \"pnpm --filter @agentic-commerce/mobile start\"",
    "dev:backend": "pnpm --filter @agentic-commerce/backend dev",
    "dev:mobile": "pnpm --filter @agentic-commerce/mobile start",
    "build": "pnpm --filter @agentic-commerce/shared-types build && pnpm --filter @agentic-commerce/validation build && pnpm --filter @agentic-commerce/backend build",
    "build:shared": "pnpm --filter @agentic-commerce/shared-types build && pnpm --filter @agentic-commerce/validation build",
    "type-check": "pnpm -r run type-check",
    "lint": "pnpm -r run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
